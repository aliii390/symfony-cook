{% extends 'base.html.twig' %}

{% block title %}Page introuvable{% endblock %}

{% block body %}
    <div style="text-align: center; padding: 50px;">
        <h1>Oops! Cette page est introuvable.</h1>
        <p>
            La page que vous cherchez n'existe pas ou a été déplacée.
        </p>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <p>Vous êtes connecté, mais cette page n'existe pas.</p>
        {% endif %}

        {% if path('app_homepage') is defined %}
            <p><a href="{{ path('app_homepage') }}" class="btn btn-primary">Retour à l'accueil</a></p>
        {% endif %}
    </div>
{% endblock %}
