{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}
 {% block stylesheets %}
 <link rel="stylesheet" href="{{ asset('styles/accueil.css') }}">
        {% endblock %}

{% block body %}
    <h1>toute les recette</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.name }}</td>
                {# <td>{{recipe_category}}</td> #}
                <td>{{ recipe.slug }}</td>
                <td>{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">Voir</a>
                    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">Modifiez</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recipe_new') }}">Cr√©er une nouvelle recette</a>
{% endblock %}
